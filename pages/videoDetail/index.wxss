/**index.wxss**/

.detail_back {
  top: 0;
  left: 0;
  z-index: -1;
  background: #333333;
}

.subsection_b {
  height: 1rpx;
  background: #666666;
}

.video_label button {
  width: auto;
  margin: 0;
  padding: 0;
  bottom: 36rpx;
  right: 0;
  line-height: initial;
  background: initial;
}

.video_scroll {
  height: calc(100vh - 240px);
}

.video_author .author_image {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
}

.videos_item .item_image {
  width: 40%;
  height: 180rpx;
}

.videos_item .item_info {
  width: 60%;
  height: 180rpx;
}

.videos_item .item_info .item_icon {
  right: 0;
  top: 30rpx;
}

.videos_item .item_info .item_info_label {
  margin-top: 0;
  width: 90%;
}

.videos_item .item_info .item_info_label .item_tagCol {
  padding: 0 6rpx;
  background: rgba(255, 49, 49, 0.8);
  color: #ffffff;
  bottom: 16rpx;
  right: 24rpx;
  border-radius: 4rpx;
  margin-left: 16rpx;
  font-weight: bold;
}

.videos_item .item_info .item_info_label {
  width: 100%;
  height: 100%;
}

.videos_item .item_info .item_tag {
  bottom: 0;
  left: 0;
}

.videos_item .item_info .item_info_label .item_tagCol {
  margin-left: 0;
  display: table;
  bottom: 42rpx;
}

.videos_item .item_info button {
  bottom: 2rpx;
  right: 0;
  padding: 0;
  line-height: initial;
  background: initial;
}

.video_dialog {
  top: 0;
  left: 0;
  width: 100vw;
  height: 100vh;
  position: fixed;
  padding-top: 50%;
}

.video_dialog_hide {
  opacity: 0;
  z-index: -100;
}

.video_dialog_show {
  z-index: 1000;
}