
.wallpaper_title {
  height: 60rpx;
  border-bottom: 2rpx solid #f5f5f5;
}

.wallpaper_title .title_item {
  text-align: center;
}

.wallpaper_title icon {
  width: 60rpx;
  height: 4rpx;
  background: #0279fb;
  bottom: -3rpx;
}

.wallpaper_title .one {
  left: calc(100% / 6 - 30rpx);
}

.wallpaper_title .two {
  left: calc(50% - 30rpx);
}

.wallpaper_title .three {
  left: calc(100% / 6 * 5 - 30rpx);
}

.wallpaper_box {
  height: calc(100vh - 60rpx);
  background: #f0f0f0;
}

.wallpaper_box .wallpaper_item .item_back {
  top: 0;
  left: 0;
  filter: blur(5px) opacity(100%) brightness(80%);
  -webkit-filter: blur(5px) opacity(100%) brightness(80%); /* Chrome, Safari, Opera */
}

.category_box .category_item {
  display: inline-block;
  vertical-align:middle;
  width: 50vw;
  height: 36vw;
}

.category_box .category_item view {
  left: 0;
  bottom: 0;
  padding-left: 30rpx;
  background: rgba(0,0,0,0.4);
  height: 68rpx;
  line-height: 68rpx;
}

.wallpaper_main {
  background: #ffffff;
  flex-wrap: wrap;
}

.wallpaper_main_info {
  height: 240rpx;
}

.wallpaper_main_pic {
  height: calc(100% - 240rpx);
}