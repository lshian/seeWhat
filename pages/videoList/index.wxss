/* pages/videoList/index.wxss */
.videos_item {
  flex-wrap: wrap;
}

.videos_item .item_image {
  width: 40%;
  height: 180rpx;
}

.videos_item .item_info {
  height: 180rpx;
}

.videos_item .item_info .item_icon {
  right: 0;
  top: 30rpx;
}

.videos_item .item_info .item_info_label {
  margin-top: 0;
  width: 90%;
}

.videos_item .item_info .item_info_label .item_tagCol {
  padding: 0 6rpx;
  background: rgba(255, 49, 49, 0.8);
  color: #ffffff;
  bottom: 16rpx;
  right: 24rpx;
  border-radius: 4rpx;
  margin-left: 16rpx;
  font-weight: bold;
}

.videos_item .item_info .item_info_label {
  width: 100%;
  height: 100%;
}

.videos_item .item_info .item_tag {
  bottom: 0;
  left: 0;
}

.videos_item .item_info .item_info_label .item_tagCol {
  margin-left: 0;
  display: table;
  bottom: 42rpx;
}

.videos_item .item_info button {
  bottom: 2rpx;
  right: 0;
  padding: 0;
  line-height: initial;
  background: initial;
}